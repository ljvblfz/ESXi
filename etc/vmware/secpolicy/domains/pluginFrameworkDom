#
# Policy rules for plugin framework
#

-s adminSys grant
-s genericSys grant
-s vsiReadSys grant
-s vsiWriteSys grant
-s ioctlSys grant
-s execSys grant
-s forkSys grant
-s forkExecSys grant
-s cloneSys grant
-s sysctlSys grant
-s killSys grant
-s syncSys grant
-s getpgidSys grant
-s getsidSys grant
-s vobSys grant
-s openSys grant
-s mprotectSys grant

-c unix_socket_create grant
-c inet_stream_socket_create grant
-c inet_dgram_socket_create grant
-c unix_stream_socket_bind grant
-c unix_dgram_socket_bind grant

-p inet_socket_bind all grant
-p inet_socket_connect loopback grant
-p inet_socket_connect nonloopback grant

-d pluginObj pluginDom file_mmap_exec grant

-r /usr/lib/cim rx
-r /etc/shadow r
-r /etc/group r
-r /etc/passwd r
-r /etc/vmware/ssl r

# Deny access to these paths
-r /etc/vmware/secpolicy
-r /usr/share/certs
-r /tardisks
