{
   "operations" :
   {
      "start" :
      [
         "sched hostcache cleanup",
         "boot storage restore --host-caches"
      ],
      "apply_host_profile" :
      [
         "sched hostcache cleanup",
         "boot hostprofile apply --earlybootinit -p vFlashHostCache.vFlashHostCacheConfig.VFlashHostCacheConfigProfile",
         "boot hostprofile apply --earlybootinit -p hostCache.hostCacheConfig.HostCacheConfigProfile"
      ]
   }
   ,
   "metadata" :
   {
      "version"  : 2,
      "requires" : ["storage", "system uuid", "system configuration", "vcfs", "datastore"],
      "provides" : ["host cache"]
   }
}

